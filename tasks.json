{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-lm",
                "-Wall",
                "-Wl,--stack=268435456",
                // "-D_UNICODE",
                // "-DUNICODE",
                "-std=c++17",
                // "-O2",
                "-fno-ms-extensions",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}
